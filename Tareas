def add_numbers(a, b):
    """Adds two numbers together.
        result devuelve el valor concatenado
        Parameters:
        a (int or float)
    """
    result = a + b
    return result
if __name__ == "__main__":
    #Llamada al metodo add_numbers()
    number = add_numbers(20, 15)
    print(number)

    def add_numbers(a, b):
        """
        Adds two numbers together.
        
        Parameters:
            a (int or float): The first number to be added.
            b (int or float): The second number to be added.

        Returns:
            int or float: The sum of the two input values.
        """
        result = a + b
        return result

    """ Libreria time forma de importar una libreria"""
    import time

class Timer:
        # Clase para medir el tiempo de ejecuci√≥n
        def __enter__(self):
            """Add two numbers together.
            result devuelve el valor concatenado
            Parameters:
            a (int or float)
            """
            self.start_time = time.time()
            return self

        def __exit__(self, exc_type, exc_val, exc_tb):
            end_time = time.time()
            print(f"Time token: {end_time - self.start_time} segundos")

with Timer():
        # Code to be timed goes here
        pass

def greet(name):
    """Greets the user with a personalized message.

    Args:
        name: The name of the user to greet.

    Returns:
        A string containing the greeting message.
    """

    if name:
        return f"Hello, {name}!"
    else:
        return "Hello, world!"

if __name__ == "__main__":
    user_name = input("Enter your name: ")
    greeting = greet(user_name)
    print(greeting)